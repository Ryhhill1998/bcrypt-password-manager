<div class="container-fluid main-body details">
  <div class="logo">
    <span class="fa-stack fa-3x">
      <i class="fa-solid fa-unlock fa-stack-2x"></i>
      <i id="fingerprint-icon" class="authorised fa-solid fa-fingerprint fa-stack-1x fa-inverse"></i>
    </span>
  </div>

  <% if (feedback === "Success") { %>
    <h2 id="feedback">Successfully Saved Credentials <i id="success-icon" class="fa-solid fa-circle-check"></i></h2>
  <% } else if (feedback === "Failure"){ %>
    <h2 id="feedback">Credentials already saved for this website <i id="failure-icon" class="fa-solid fa-triangle-exclamation"></i></h2>
  <% } %>

    <form action="/password-add" method="post" class="form-signin" autocomplete="off">
      <input name="website" type="text" class="form-control" placeholder="Website" required autofocus>
      <span>
        <input id="password" name="password" class="form-control" placeholder="Password" required>
        <button class="btn btn-lg btn-dark btn-block generate" type="button">Generate</button>
      </span>
      <button class="btn btn-lg btn-dark btn-block register" type="submit"><i class="fa-solid fa-plus"></i></button>
    </form>
</div>

